---
import { Urls } from "@/constants/meta";
import Text from "@/elements/Text.astro";
---

<div class="container">
  <div class="inner">
    <div class="glass">
      <div class="glass-filter"></div>
      <div class="glass-overlay"></div>
      <div class="glass-specular"></div>
      <div class="content">
        <Text color="primary" nowrap>Let's talk now</Text>

        <div>
          <div class="button">
            <a href={Urls.CONTACT}>
              <Text color="dark" weight="medium" nowrap>Get in Touch</Text>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="inner">
    <div class="glass">
      <div class="glass-filter"></div>
      <div class="glass-overlay"></div>
      <div class="glass-specular"></div>

      <svg style="display: none">
        <filter id="lg-dist" x="0%" y="0%" width="100%" height="100%">
          <feTurbulence type="fractalNoise" baseFrequency="0.008 0.008" numOctaves="2" seed="92" result="noise">
          </feTurbulence>
          <feGaussianBlur in="noise" stdDeviation="2" result="blurred"></feGaussianBlur>
          <feDisplacementMap in="SourceGraphic" in2="blurred" scale="70" xChannelSelector="R" yChannelSelector="G">
          </feDisplacementMap>
        </filter>
      </svg>
    </div>
  </div>
</div>

<style lang="scss">
  @use "@/styles/common/variables" as *;
  @use "@/styles/common/mixins" as *;

  .inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .glass {
    position: relative;
    overflow: hidden;
    background: transparent;
    border-radius: 2rem;
    box-shadow:
      0 6px 6px rgb(0 0 0 / 20%),
      0 0 20px rgb(0 0 0 / 10%);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 2.2);

    &-filter {
      position: absolute;
      inset: 0;
      z-index: 0;
      isolation: isolate;
      filter: url("#lg-dist");
      backdrop-filter: blur(4px);
    }

    &-overlay {
      position: absolute;
      inset: 0;
      z-index: $layer-overlay;
      background: $color-glass-bg;
    }

    &-specular {
      position: absolute;
      inset: 0;
      z-index: $layer-popup;
      overflow: hidden;
      border-radius: inherit;
      box-shadow:
        inset 1px 1px 0 $color-glass-highlight,
        inset 0 0 5px $color-glass-highlight;
    }
  }

  .content {
    position: relative;
    z-index: $layer-fixed;
    display: flex;
    gap: $space-normal;
    align-items: center;
    justify-content: center;
    padding: $space-small $space-small $space-small $space-medium;
  }

  .button {
    padding: $space-small $space-medium;
    background-color: $color-bg-secondary;
    border-radius: $radius-pill;
  }
</style>
