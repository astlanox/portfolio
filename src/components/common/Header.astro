---
import LogoImage from "@/assets/images/common/logo.svg";
import { Titles, Urls } from "@/constants/meta";
import Image from "@/elements/Image.astro";
import Cta from "./Cta.astro";
---

<header class="container">
  <nav class="nav">
    <a href={Urls.BASE}>
      <Image src={LogoImage} alt={Titles.SITE} />
    </a>
  </nav>

  <Cta />
</header>

<style lang="scss">
  @use "@/styles/tokens" as *;
  @use "@/styles/utilities" as *;

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 80px;
    padding-right: space(nm);
    padding-left: space(nm);

    @include up(md) {
      height: 120px;
      padding-right: space(md);
      padding-left: space(md);
    }

    @include up(xl) {
      padding-right: space(xl);
      padding-left: space(xl);
    }
  }

  .nav {
    width: 120px;

    @include up(xl) {
      width: 160px;
    }
  }
</style>
