---
import LogoImage from "@/assets/images/common/logo.svg";
import { Titles, Urls } from "@/constants/meta";
import Image from "@/elements/Image.astro";
import Cta from "./Cta.astro";
---

<header class="container">
  <nav class="nav">
    <a href={Urls.BASE}>
      <Image src={LogoImage} alt={Titles.SITE} />
    </a>
  </nav>

  <Cta />
</header>

<style lang="scss">
  @use "@/styles/common/variables" as *;
  @use "@/styles/common/mixins" as *;

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 80px;
    padding-right: $space-normal;
    padding-left: $space-normal;

    @include for-screen-medium {
      height: 120px;
      padding-right: $space-medium;
      padding-left: $space-medium;
    }

    @include for-screen-large {
      padding-right: $space-x-large;
      padding-left: $space-x-large;
    }
  }

  .nav {
    width: 120px;

    @include for-screen-large {
      width: 160px;
    }
  }
</style>
