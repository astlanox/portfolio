---
import Text from "@elements/Text.astro";

// FIXME:
type Item = { title: string; description: string };

const { items } = Astro.props as { items: Item[] };
---

<div class="container">
  <ol class="list">
    {
      items.map((item, index) => (
        <li class="list-item">
          <dl class="description">
            <dt class="description-title">{item.title}</dt>
            <dd>
              <Text>{item.description}</Text>
            </dd>
          </dl>
        </li>
      ))
    }
  </ol>
</div>

<style lang="scss">
  @use "@styles/variables" as *;
  @use "@styles/mixins" as *;

  .container {
    @include container;
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: $space-large;

    @media screen and (min-width: $screen-large) {
      flex-direction: row;
    }

    &-item {
      position: relative;
      padding-left: $space-large;

      @media screen and (min-width: $screen-large) {
        padding-top: $space-large;
        padding-left: 0;
      }

      &:not(:last-child) {
        &::before {
          position: absolute;
          top: 20px;
          left: 11px;
          width: 1px;
          height: calc(100% + $space-large / 2);
          content: "";
          background-color: $color-border;

          @media screen and (min-width: $screen-large) {
            top: 11px;
            left: calc(50% + 8px);
            width: calc(100% + $space-large / 2);
            height: 1px;
          }
        }
      }
    }
  }

  .description {
    display: flex;
    flex-direction: column;
    gap: $space-normal;

    @media screen and (min-width: $screen-large) {
      text-align: center;
    }
    &-title {
      font-size: $font-size-medium;
      color: $color-text-primary;

      &::before,
      &::after {
        position: absolute;
        content: "";
      }

      &::before {
        top: -1px;
        left: 0;
        width: 21px;
        height: 21px;

        background-color: $color-bg-primary;
        border: 1px solid $color-border-strong;
        border-radius: $radius-circle;

        @media screen and (min-width: $screen-large) {
          top: 0;
          left: 50%;
          transform: translateX(-50%);
        }
      }

      &::after {
        top: 3px;
        left: 4px;
        width: 15px;
        height: 15px;
        background-color: $color-border-strong;
        border-radius: $radius-circle;

        @media screen and (min-width: $screen-large) {
          top: 4px;
          left: 50%;
          transform: translateX(-50%);
        }
      }
    }
  }
</style>
