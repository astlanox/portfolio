---
import Text from "@/elements/Text.astro";

const { description } = Astro.props;
---

<div class="container">
  <div class="inner">
    <Text align="center">
      {description}
    </Text>
  </div>
</div>

<style lang="scss">
  @use "@/styles/tokens" as *;
  @use "@/styles/utilities" as *;

  .container {
    @include container;
  }

  .inner {
    @include container-inner;
  }
</style>
