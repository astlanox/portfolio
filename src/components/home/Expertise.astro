---

<section class="container">
  <div class="inner">
    <h2 class="title">Expertise</h2>

    <ul class="list">
      {
        contents.map((item) => (
          <li class="list-item">
            <article class="article js-article" tabindex="0" role="button">
              <h3 class="article-title">{item.title}</h3>
              <div class="article-summary">
                <Text height="normal">{item.summary}</Text>
              </div>
              <div class="article-detail">
                <Text height="normal">{item.detail}</Text>
              </div>
              <div class="article-categories">
                {item.categories?.map((category) => (
                  <div class="article-categories-item">
                    <category.logo width="24" height="24" />
                    <Text color="white" height="thin">
                      {category.name}
                    </Text>
                  </div>
                ))}
              </div>
            </article>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<div class="modal js-modal" aria-hidden="true">
  <div class="modal-backdrop js-backdrop"></div>
  <div class="modal-panel js-modalPanel" role="dialog" aria-modal="true"></div>
</div>

<style lang="scss">
  @use "@/styles/common/variables" as *;
  @use "@/styles/common/mixins" as *;

  .container {
    @include container;
  }

  .inner {
    padding-top: $space-large;
    padding-bottom: $space-large;
  }

  .title {
    @include title-strong($font-size-x-large, uppercase);
  }

  .list {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: $space-normal;
    margin-top: $space-normal;

    @include for-screen-medium {
      grid-template-columns: repeat(12, minmax(0, 1fr));
      margin-top: $space-x-large;
    }

    &-item {
      @include for-screen-medium {
        &:nth-child(1) {
          grid-row: 1 / 3;
          grid-column: 9 / 13;
          order: 3;
        }

        &:nth-child(2) {
          grid-column: 4 / 9;
          order: 2;
        }

        &:nth-child(3) {
          grid-column: 1 / 5;
          order: 4;
        }

        &:nth-child(4) {
          grid-column: 1 / 4;
          order: 1;
        }

        &:nth-child(5) {
          grid-column: 5 / 9;
          order: 5;
        }
      }
    }
  }

  .article {
    @include box($space-normal);

    position: relative;
    justify-content: flex-end;
    padding: $space-xxx-large $space-medium $space-medium;
    cursor: pointer;
    background-color: $color-bg-primary;
    border: 1px solid $color-border;
    border-radius: $radius-normal;

    &-title {
      @include title-strong($font-size-medium);
    }

    &-categories {
      flex-wrap: wrap;
      gap: $space-small;

      &-item {
        display: flex;
        gap: $space-small;
        align-items: center;
        justify-content: center;
        padding: $space-x-small $space-small $space-x-small $space-x-small;
        border: 1px solid $color-border;
        border-radius: $radius-small;
      }
    }

    &-categories,
    &-detail {
      display: none;
    }
  }

  .modal {
    &.is-open {
      .modal-backdrop {
        visibility: visible;
      }
    }

    &-panel {
      position: fixed;
      top: 50%;
      left: 50%;
      z-index: $layer-fixed;
      width: $screen-normal;
      max-width: calc(100% - $space-normal * 2);
      background-color: $color-bg-primary;
      border-radius: $radius-normal;
      transform: translateX(-50%) translateY(-50%);
    }

    &-backdrop {
      position: fixed;
      top: 0;
      left: 0;
      visibility: hidden;
      width: 100vw;
      height: 100vh;
      background-color: $color-bg-backdrop;
      opacity: 0;
      backdrop-filter: blur(10px);
      transition: 0.25s;
    }
  }
</style>

