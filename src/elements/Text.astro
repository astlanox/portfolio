---
const { tag = "p", size = "", weight = "", height = "", color = "", align = "", transform = "", nowrap } = Astro.props;

const Tag = tag;

const classList = ["text"];
if (size) classList.push(`text-size-${size}`);
if (weight) classList.push(`text-weight-${weight}`);
if (height) classList.push(`text-height-${height}`);
if (color) classList.push(`text-color-${color}`);
if (align) classList.push(`text-align-${align}`);
if (nowrap) classList.push("text-nowrap");
if (transform) classList.push(`text-transform-${transform}`);
---

<Tag class={classList.join(" ") || undefined}><slot /></Tag>

<style lang="scss">
  @use "@/styles/tokens" as *;
  @use "@/styles/utilities" as *;

  .text {
    display: block;
    line-height: lh(wide);

    &-size {
      &-x-small {
        font-size: fs(xs);
      }

      &-small {
        font-size: fs(sm);
      }

      &-normal {
        font-size: fs(nm);
      }

      &-medium {
        font-size: fs(md);
      }
    }

    &-weight {
      &-normal {
        font-weight: fw(normal);
      }

      &-medium {
        font-weight: fw(medium);
      }

      &-bold {
        font-weight: fw(bold);
      }
    }

    &-height {
      &-thin {
        line-height: lh(thin);
      }

      &-normal {
        line-height: lh(normal);
      }

      &-wide {
        line-height: lh(wide);
      }
    }

    &-color {
      &-primary {
        color: t(text, primary);
      }

      &-black {
        color: t(text, black);
      }

      &-white {
        color: t(text, white);
      }
    }

    &-align {
      &-center {
        text-align: center;
      }
    }

    &-transform {
      &-capitalize {
        text-transform: capitalize;
      }
    }

    &-nowrap {
      white-space: nowrap;
    }
  }
</style>
