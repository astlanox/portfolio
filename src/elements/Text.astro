---
const { tag = "p", size = "normal", color, align, transform } = Astro.props;
const Tag = tag;
const classList = ["text"];
if (size) classList.push(`text-size-${size}`);
if (color) classList.push(`text-color-${color}`);
if (align) classList.push(`text-align-${align}`);
if (transform) classList.push(`text-transform-${transform}`);
---

<Tag class={classList.join(" ") || undefined}><slot /></Tag>

<style lang="scss">
  @use "@styles/variables" as *;

  .text {
    display: block;
    line-height: $line-large;

    &-size {
      &-x-small {
        font-size: $font-size-x-small;
      }

      &-small {
        font-size: $font-size-small;
      }

      &-normal {
        font-size: $font-size-normal;
      }

      &-medium {
        font-size: $font-size-medium;
      }
    }

    &-color {
      &-primary {
        color: $color-text-primary;
      }
    }

    &-align {
      &-center {
        text-align: center;
      }
    }

    &-transform {
      &-capitalize {
        text-transform: capitalize;
      }
    }
  }
</style>
