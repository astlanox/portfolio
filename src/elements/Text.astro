---
const { tag = "p", size = "", weight = "", color = "", align = "", transform = "", nowrap } = Astro.props;

const Tag = tag;

const classList = ["text"];
if (size) classList.push(`text-size-${size}`);
if (weight) classList.push(`text-weight-${weight}`);
if (color) classList.push(`text-color-${color}`);
if (align) classList.push(`text-align-${align}`);
if (nowrap) classList.push("text-nowrap");
if (transform) classList.push(`text-transform-${transform}`);
---

<Tag class={classList.join(" ") || undefined}><slot /></Tag>

<style lang="scss">
  @use "@/styles/common/variables" as *;
  @use "@/styles/common/mixins" as *;

  .text {
    display: block;
    line-height: $line-large;

    &-size {
      &-x-small {
        font-size: $font-size-x-small;
      }

      &-small {
        font-size: $font-size-small;
      }

      &-normal {
        font-size: $font-size-normal;
      }

      &-medium {
        font-size: $font-size-medium;
      }
    }

    &-weight {
      &-normal {
        font-weight: $font-weight-normal;
      }
      &-medium {
        font-weight: $font-weight-medium;
      }
      &-bold {
        font-weight: $font-weight-bold;
      }
    }

    &-color {
      &-primary {
        color: $color-text-primary;
      }
      &-dark {
        color: $color-text-dark;
      }
    }

    &-align {
      &-center {
        text-align: center;
      }
    }

    &-transform {
      &-capitalize {
        text-transform: capitalize;
      }
    }

    &-nowrap {
      white-space: nowrap;
    }
  }
</style>
