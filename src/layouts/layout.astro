---
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import { Titles } from "@/constants/meta";

const { title } = Astro.props;
import "@/styles/style.scss";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} | ${Titles.SITE}` : `${Titles.SITE} - Web developer's portfolio`}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <Header />

    <main class="main">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style lang="scss">
  @use "@/styles/tokens" as *;
  @use "@/styles/utilities" as *;

  .main {
    margin-top: space(nm);

    @include up(md) {
      margin-top: space(lg);
    }

    @include up(md) {
      margin-top: space("2xl");
    }
  }
</style>
