---
import SpeedInsights from "@vercel/speed-insights/astro";
import IconSignal from "@/assets/icons/icon_signal.svg";
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import { Descriptions, Titles, Urls } from "@/constants/meta";
import Button from "@/elements/Button.astro";
import "@/styles/style.scss";

const { title, isDisplayCta = true, enableAnimation = false } = Astro.props;

const opgUrl = Urls.BASE + "ogp.png";
---

<html lang="en">
  <head>
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });

        const f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-WQRH3LCB");
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} | ${Titles.SITE}` : `${Titles.SITE} - ${Descriptions.TITLE}`}</title>
    <meta name="description" content={Descriptions.SITE} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Astlanox" />
    <meta
      property="og:title"
      content={title ? `${title} | ${Titles.SITE}` : `${Titles.SITE} - ${Descriptions.TITLE}`}
    />
    <meta property="og:description" content={Descriptions.SITE} />
    <meta property="og:url" content={Astro.site?.href ?? ""} />
    <meta property="og:image" content={opgUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={title ? `${title} | ${Titles.SITE}` : `${Titles.SITE} - ${Descriptions.TITLE}`}
    />
    <meta name="twitter:description" content={Descriptions.SITE} />
    <meta name="twitter:image" content={opgUrl} />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WQRH3LCB"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>
    <SpeedInsights />

    <Header enableAnimation={enableAnimation} />

    <main>
      <slot />

      {
        isDisplayCta && (
          <nav class="nav js-cta">
            <Button url={Urls.CONTACT} text="Communicate" label="Awaiting your signalâ€¦" icon={IconSignal} />
          </nav>
        )
      }
    </main>

    <Footer />
  </body>
</html>

<style lang="scss">
  @use "@/styles/tokens" as *;
  @use "@/styles/utilities" as *;

  .nav {
    position: fixed;
    bottom: sp(small);
    left: 50%;
    z-index: ly(fixed);
    visibility: hidden;
    opacity: 0;
    transform: translateX(-50%) translateY(100%);
    transition: 0.15s ease-in-out;

    @include up(xlarge) {
      bottom: sp(medium);
    }

    &.is-show {
      visibility: visible;
      opacity: 1;
      transform: translateX(-50%) translateY(0%);
      transition: 0.15s ease-in-out;
    }
  }
</style>

<script src="@/scripts/ctaObserver.ts"></script>
